	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "setup",
			"skipFiles": [
				"<node_internals>/**"
			],
			"program": "${workspaceFolder}/out/main.js",
			"sourceMaps": true,
			"outFiles": [
				"${workspaceFolder}/out/*.js"
			],
			"preLaunchTask": "npm: debug",
			"args": [
				"init",
				"./test/test"
			]
		},
		{
			"type": "node",
			"request": "launch",
			"name": "runFile",
			"skipFiles": [
				"<node_internals>/**"
			],
			"program": "${workspaceFolder}/out/main.js",
			"sourceMaps": true,
			"outFiles": [
				"${workspaceFolder}/out/*.js"
			],
			"preLaunchTask": "npm: debug",
			"args": [
				"runFile",
				"./test/main",
				"./test/main.iota"
			]
		},
		{
			"type": "node",
			"request": "launch",
			"name": "runTests",
			"skipFiles": [
				"<node_internals>/**"
			],
			"program": "${workspaceFolder}/out/runTests.js",
			"sourceMaps": true,
			"outFiles": [
				"${workspaceFolder}/out/*.js"
			],
			"preLaunchTask": "npm: debug",
			"args": []
		}
	]
}